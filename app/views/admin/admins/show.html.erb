<h1>Orders:</h1>

<h2>Packaged:</h2>
<% @orders.status("packaged").each do |order| %>
  <div id="order-<%= order.id %>">
    <%= link_to "#{order.name}", "/admin" %>
    <%= order.id %>
    <%= order.created_at %>
  </div>
<% end %>

