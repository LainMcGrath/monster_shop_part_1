<h1>Register as a User</h1>

<%= form_tag '/users' do %>

  <%= label_tag :name %>
  <%= text_field_tag :name %>

  <%= label_tag :address %>
  <%= text_field_tag :address %>

  <%= label_tag :city %>
  <%= text_field_tag :city %>

  <%= label_tag :state %>
  <%= text_field_tag :state %>

  <%= label_tag :zip %>
  <%= text_field_tag :zip %>

  <%= label_tag :email %>
  <%= text_field_tag :email %>

  <%= password_field_tag :password %>

  <%= submit_tag 'Register as a User' %>
<% end %>
